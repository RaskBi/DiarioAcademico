<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DiarioAcademico.MainPage">
    
    <StackLayout Padding="10">
        <Label FontFamily="fontello" Text="&#xF14B; Registro" HorizontalTextAlignment="Center" TextColor="Black" FontSize="36"/>
        <Entry Placeholder="Nuevo Email" HorizontalTextAlignment="Center" x:Name="txtNEmail"/>
         <Entry Placeholder="Nueva contraseña" HorizontalTextAlignment="Center" IsPassword="True" x:Name="txtNcontra"/>
            <Button BorderWidth="1" 
            BorderColor="DarkCyan" 
            BackgroundColor="CadetBlue"
            BorderRadius="100"
            TextColor="Black" Text="Registrar" Clicked="btnRegistrar_Clicked" x:Name="btnRegistrar"/>
            <Button 
            BorderWidth="1" 
            BorderColor="DarkCyan" 
            BackgroundColor="CadetBlue"
            BorderRadius="100"
            TextColor="Black"  Text="Ir al Login" Clicked="btnIrLog_Clicked" x:Name="btnIrLog"/>
    </StackLayout>

</ContentPage>  
