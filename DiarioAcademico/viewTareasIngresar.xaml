<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DiarioAcademico.viewTareasIngresar">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Ingreso de Tareas" FontSize="Title" Padding="20" HorizontalTextAlignment="Center"/>
            <Entry x:Name="txtnombre" Placeholder="Titulo"/>
            <Editor x:Name="txtLongDesc" Placeholder="Descripcion de la tarea" MaxLength="100" VerticalOptions="FillAndExpand" Keyboard="Chat"/>
            <DatePicker x:Name="dtpFechaI" MinimumDate="01/01/1900" MaximumDate="12/31/3000" Format="dd/MM/yyyy"/>
            <DatePicker x:Name="dtpFechaF" MinimumDate="01/01/1900" MaximumDate="12/31/3000" Format="dd/MM/yyyy"/>
            <Button x:Name="btnGuardar" VerticalOptions="EndAndExpand" BackgroundColor="WhiteSmoke" ImageSource="plusIng.png" Clicked="btnGuardar_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>