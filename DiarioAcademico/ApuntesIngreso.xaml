<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DiarioAcademico.ApuntesIngreso">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Ingreso de Apuntes" FontSize="Title" Padding="20" HorizontalTextAlignment="Center"/>
            <Entry x:Name="txtNombre"  Placeholder="Tema"/>
            <Editor x:Name="txtLongDesc" Placeholder="Descripcion del apunte" MaxLength="100" VerticalOptions="FillAndExpand" Keyboard="Chat"/>
            <Button x:Name="btnGuardar" VerticalOptions="EndAndExpand" BackgroundColor="WhiteSmoke" ImageSource="plusIng.png" Clicked="btnGuardar_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>